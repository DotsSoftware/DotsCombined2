# Uncomment this line and set the minimum iOS version Flutter supports
platform :ios, '12.0'  # Flutter's minimum iOS version

# Flutter post-install configuration
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Enable BITCODE for OneSignal
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      
      # For OneSignal and other dependencies
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'PERMISSION_LOCATION=1',
        'PERMISSION_NOTIFICATIONS=1',
        'PERMISSION_CAMERA=1',
        'PERMISSION_MICROPHONE=1',
        'PERMISSION_PHOTOS=1',
      ]
    end
  end
end

target 'Runner' do
  use_frameworks!  # Keep this uncommented
  pod 'Flutter', :podspec => File.join(File.dirname(File.dirname(__FILE__)), 'flutter', 'ios', 'Flutter.podspec')

  target 'RunnerTests' do
    inherit! :search_paths
    # Pods for testing
  end
end